#myFooter
    background-color #373a48
    color white
    flex 0 0 auto
    -webkit-flex 0 0 auto
    .footer-copyright
        background-color #383737
        padding-top 3px
        padding-bottom 3px
        text-align center
        p
            margin 10px
            color #ccc
    ul
        list-style-type none
        padding-left 0
        line-height 1.7
    h5
        font-size 18px
        color white
        font-weight bold
        margin-top 30px
    a
        color #d2d1d1
        text-decoration none
    .myCols
        text-align center
    .social-networks
        text-align center
        padding-top 30px
        padding-bottom 38px
        a
            font-size 32px
            margin-right 5px
            margin-left 5px
            color #f9f9f9
            padding 10px
            transition 0.2s
            &:hover
                text-decoration none
    .facebook
        &:hover
            color #0077e2
    .google
        &:hover
            color #ef1a1a
    .twitter
        &:hover
            color #00aced

#myFooter a:hover, #myFooter a:focus
    text-decoration none
    color white

@media screen and (max-width: 767px)
    #myFooter
        text-align center